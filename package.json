    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.21.0",
    "eslint-plugin-unicorn": "^48.0.0",
    "lerna": "^7.0.0",
    "lerna-update-wizard": "^1.1.2",
    "markdownlint-cli": "^0.37.0",
    "prettier": "^3.0.0",
    "simple-git-hooks": "^2.8.1"
